<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_map_white_48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/splash_text_margin"
            android:layout_marginRight="@dimen/splash_text_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            android:gravity="center_horizontal"
            android:text="@string/splash_screen_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/subheading_text_size" />
    </LinearLayout>

    <Button
        android:id="@+id/permission_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/splash_button_margin"
        android:onClick="getPermission"
        android:text="@string/turn_on"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

</RelativeLayout>